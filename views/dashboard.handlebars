<div class="row mt-4">
  <div class="col-md-12">
    <h3>Create a Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

  <div class="row">
  {{#if posts.length}}
  <div class="col-md-12 post-list">
    <h3>Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div>
        <a href="/editpost/{{post.id}}"><button class="btn btn-primary">EDIT POST</button></a>
      </div>
      <div class="col-md-4">
        <button class="delete-post-btn btn btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>



<script src="./js/profile.js"></script>